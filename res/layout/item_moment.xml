<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="40dp"
    android:gravity="center_vertical"
    android:orientation="horizontal"
    android:padding="5dp" >

    <ImageView
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:src="@drawable/icon_clock"
        android:visibility="gone" />

    <TextView
        android:id="@+id/itemmoment_tv_time"
        android:layout_width="45dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:textColor="@color/coffee"
        android:textSize="@dimen/size_content_txt_little" />

    <TextView
        android:id="@+id/itemmoment_tv_content"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_weight="1"
        android:singleLine="true"
        android:textColor="@color/dark_coffee"
        android:textSize="@dimen/size_content_txt" />

    <ImageView
        android:id="@+id/itemmoment_iv_addtype"
        android:layout_width="40dp"
        android:layout_height="30dp"
        android:layout_marginLeft="5dp"
        android:src="@drawable/add_type_image"
        android:visibility="gone" />

    <ImageView
        android:id="@+id/itemmoment_iv_share"
        android:layout_width="40dp"
        android:layout_height="30dp"
        android:layout_marginLeft="5dp"
        android:src="@drawable/logo_sinaweibo"
        android:visibility="gone" />

    <ImageView
        android:id="@+id/itemmoment_iv_content"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_marginLeft="5dp"
        android:visibility="gone" />

    <Button
        android:id="@+id/itemmoment_btn_share"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="同步"
        android:visibility="gone" />

</LinearLayout>